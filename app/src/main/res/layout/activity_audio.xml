<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/ImageView_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@drawable/ic_top_back"
            />

        <TextView
            style="@style/TitleBarCenterText"
            android:layout_centerInParent="true"
            android:text="音频"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_Audio"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="invisible"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ImageView_Play_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_voice_start"
            />

        <TextView
            android:id="@+id/TextView_Duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textColor="#333333"
            android:textSize="12sp"
            tools:text="12’02’’"
            />

        <ImageView
            android:id="@+id/ImageView_Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_del_img"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dip"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextView_Voice_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dip"
            android:textColor="#666666"
            android:textSize="18sp"
            android:text="按住说话"
            />

        <ImageView
            android:id="@+id/ImageView_Voice_Press"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dip"
            android:src="@drawable/ic_speak_normal"
            />

        <TextView
            android:id="@+id/TextView_Add_Duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dip"
            android:textColor="#666666"
            android:textSize="18sp"
            android:text="00:00"
            />

    </LinearLayout>

</LinearLayout>